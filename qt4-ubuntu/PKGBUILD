        'kubuntu_14_systemtrayicon.diff'
        'kubuntu_28_xi2.1.patch'
        'kubuntu_30_translucent_drag_pixmap.diff'
        'kubuntu_31_unity_workarea_atom.diff'
        'kubuntu_93_disable_overlay_scrollbars.diff'
