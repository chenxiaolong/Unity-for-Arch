        "https://dl.dropboxusercontent.com/u/486665/Translations/translations-${_translations}-gnome-session.tar.gz"
        '55gnome-session_gnomerc'
        '50_ubuntu_sessions.patch'
        '52_xdg_current_desktop.patch'
