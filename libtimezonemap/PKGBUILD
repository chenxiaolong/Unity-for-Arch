# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

# vercheck-pkgbuild: auto
# vercheck-ubuntu: name=${pkgname}, native, repo=vivid

pkgname=libtimezonemap
pkgver=0.4.4
pkgrel=1
pkgdesc="GTK+3 timezone map widget"
arch=(i686 x86_64)
url="https://launchpad.net/libtimezonemap"
license=(GPL)
groups=(unity)
depends=(cairo gtk3 json-glib libsoup)
makedepends=(gobject-introspection intltool python2)
source=("https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname}_${pkgver}.tar.gz")
sha512sums=('d15ec97d7b4522fbc3acf29d6873c124e321150a14ab00321904445d918cd69b9210d25e5a9b07876a6da31d0a466cf45237e7acacf9e4b37a3427ccfbbe0014')

build() {
  cd "${pkgname}-${pkgver}"
  autoreconf -vfi
  ./configure --prefix=/usr --enable-introspection --with-gtk=3
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
